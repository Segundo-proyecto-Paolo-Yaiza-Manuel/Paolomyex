<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</head>

<body>
  <nav class=" navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand"  href="/users/home">home</a>
      </div>
      <form action="/logout" method="POST">
        <ul class="nav navbar-nav">
          <% if (user){ %>
             <a class="btn btn navbar-btn" href="/users/edit">Edit Profile</a>
             <a class="btn btn navbar-btn" href="/users/userinfo">Show User</a>
             <a class="btn btn navbar-btn" href="/users/operation-history">Operations History</a>
             <% if (user.inArbitrage){ %>
               <a class="btn btn navbar-btn" href="/users/stop-arbitrage">Stop Arbitrage</a>
             <% }else{ %>
               <a class="btn btn navbar-btn" href="/users/init-arbitrage">Init Arbitrage</a>
             <%}%>
             <button class="btn btn-danger navbar-btn" href="/home">LOGOUT</button>
          <% }else{ %>
            <li><a class="login" href="/signup">Sign Up</a></li>
            <li><a class="login" href="/login">Login</a></li>
          <%}%>
        </ul>
      </form>
    </div>
  </nav>


  <%- body -%>


  <script src="/javascript/GDAXHandler.js"></script>
  <script src="/javascript/BitfinexHandler.js"></script>
  <script src="/javascript/BitstampHandler.js"></script>
  <script src="/javascript/main.js"></script>
